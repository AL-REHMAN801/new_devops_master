pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'devops-sample-app'
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_CREDENTIALS = credentials('dockerhub-credentials')
        SONAR_CREDENTIALS = credentials('sonarqube-token')
        KUBECONFIG_CREDENTIALS = credentials('kubeconfig-file')
        APP_VERSION = "${env.BUILD_NUMBER}"
    }
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
        timeout(time: 1, unit: 'HOURS')
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "Checking out code from repository..."
                    checkout scm
                }
            }
        }
        
        stage('Code Quality Check') {
            steps {
                script {
                    echo "Running code quality checks..."
                    dir('phase2-cicd/sample-app') {
                        sh 'npm ci'
                        sh 'npm run lint'
                    }
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                script {
                    echo "Running SonarQube analysis..."
                    withSonarQubeEnv('SonarQube') {
                        dir('phase2-cicd/sample-app') {
                            sh """
                                sonar-scanner \
                                -Dsonar.projectKey=devops-multicloud-project \
                                -Dsonar.sources=. \
                                -Dsonar.exclusions=**/node_modules/**,**/*.test.js \
                                -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info
                            """
                        }
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                script {
                    echo "Waiting for SonarQube Quality Gate..."
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    echo "Running automated tests..."
                    dir('phase2-cicd/sample-app') {
                        sh 'npm test -- --coverage'
                    }
                }
            }
            post {
                always {
                    junit 'phase2-cicd/sample-app/coverage/junit.xml'
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'phase2-cicd/sample-app/coverage',
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report'
                    ])
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    dir('phase2-cicd/sample-app') {
                        dockerImage = docker.build("${DOCKER_REGISTRY}/${DOCKER_CREDENTIALS_USR}/${DOCKER_IMAGE}:${APP_VERSION}")
                        docker.build("${DOCKER_REGISTRY}/${DOCKER_CREDENTIALS_USR}/${DOCKER_IMAGE}:latest")
                    }
                }
            }
        }
        
        stage('Security Scan - Trivy') {
            steps {
                script {
                    echo "Running Trivy security scan..."
                    sh """
                        trivy image \
                        --severity HIGH,CRITICAL \
                        --format table \
                        --output trivy-report.txt \
                        ${DOCKER_REGISTRY}/${DOCKER_CREDENTIALS_USR}/${DOCKER_IMAGE}:${APP_VERSION}
                    """
                    
                    sh """
                        trivy image \
                        --severity HIGH,CRITICAL \
                        --format json \
                        --output trivy-report.json \
                        ${DOCKER_REGISTRY}/${DOCKER_CREDENTIALS_USR}/${DOCKER_IMAGE}:${APP_VERSION}
                    """
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'trivy-report.*', allowEmptyArchive: true
                }
            }
        }
        
        stage('Push to Registry') {
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Pushing Docker image to registry..."
                    docker.withRegistry("https://${DOCKER_REGISTRY}", 'dockerhub-credentials') {
                        dockerImage.push("${APP_VERSION}")
                        dockerImage.push("latest")
                    }
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Deploying to Kubernetes..."
                    withKubeConfig([credentialsId: 'kubeconfig-file']) {
                        sh """
                            kubectl set image deployment/devops-sample-app \
                            devops-sample-app=${DOCKER_REGISTRY}/${DOCKER_CREDENTIALS_USR}/${DOCKER_IMAGE}:${APP_VERSION} \
                            --record
                        """
                        
                        sh """
                            kubectl rollout status deployment/devops-sample-app --timeout=5m
                        """
                        
                        sh """
                            kubectl get pods -l app=devops-sample-app
                            kubectl get services devops-sample-app
                        """
                    }
                }
            }
        }
        
        stage('Smoke Tests') {
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Running smoke tests..."
                    sh """
                        SERVICE_URL=\$(kubectl get service devops-sample-app -o jsonpath='{.status.loadBalancer.ingress[0].ip}')
                        curl -f http://\${SERVICE_URL}/health || exit 1
                    """
                }
            }
        }
    }
    
    post {
        always {
            script {
                echo "Cleaning up workspace..."
                cleanWs()
            }
        }
        success {
            script {
                echo "Pipeline completed successfully!"
                // Send success notification
                emailext (
                    subject: "SUCCESS: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                    body: """
                        <p>SUCCESSFUL: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'</p>
                        <p>Check console output at <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>
                    """,
                    recipientProviders: [developers(), requestor()]
                )
            }
        }
        failure {
            script {
                echo "Pipeline failed!"
                // Send failure notification
                emailext (
                    subject: "FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                    body: """
                        <p>FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'</p>
                        <p>Check console output at <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>
                    """,
                    recipientProviders: [developers(), requestor()]
                )
            }
        }
    }
}
