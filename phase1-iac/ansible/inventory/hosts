# Ansible Inventory File
# Define your hosts here after infrastructure is provisioned

[all:vars]
ansible_user=ubuntu
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_python_interpreter=/usr/bin/python3

# AWS EC2 Instances
[aws_nodes]
# aws-node-1 ansible_host=<EC2_PUBLIC_IP>
# aws-node-2 ansible_host=<EC2_PUBLIC_IP>

# Azure VMs
[azure_nodes]
# azure-node-1 ansible_host=<AZURE_VM_PUBLIC_IP>
# azure-node-2 ansible_host=<AZURE_VM_PUBLIC_IP>

# GCP Compute Instances
[gcp_nodes]
# gcp-node-1 ansible_host=<GCP_VM_PUBLIC_IP>
# gcp-node-2 ansible_host=<GCP_VM_PUBLIC_IP>

# Kubernetes Master Nodes
[k8s_masters]
# k8s-master-1 ansible_host=<MASTER_IP>

# Kubernetes Worker Nodes
[k8s_workers]
# k8s-worker-1 ansible_host=<WORKER_IP>
# k8s-worker-2 ansible_host=<WORKER_IP>

# Group all cloud nodes
[cloud_nodes:children]
aws_nodes
azure_nodes
gcp_nodes

# Group all Kubernetes nodes
[k8s_nodes:children]
k8s_masters
k8s_workers

# Development environment
[development]
# dev-server ansible_host=<DEV_SERVER_IP>

# Production environment
[production]
# prod-server-1 ansible_host=<PROD_SERVER_IP>
# prod-server-2 ansible_host=<PROD_SERVER_IP>
